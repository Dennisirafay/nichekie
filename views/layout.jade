doctype html

html(lang="en")
    head
        if pageTitle
            title #{pageTitle}
        else
            title Nichekie - Lets Get You Offers

        block styles
            link(rel="stylesheet" href="/styles/bootstrap.min.css")
            link(rel="stylesheet" href="/styles/main.css")

        block scripts
            script(src="/js/jquery.min.js")
            script(src="/js/bootstrap.min.js")



    body
        block header
            header.navbar.navbar-default.navbar-fixed-top.container-fluid(role="banner")
                .container
                    .navbar-header
                        a.navbar-brand(href="/") Nichekie
                        a.navbar-brand.menu(data-toggle="collapse" data-target="#menu") Menu
                    .navbar-collapse.collapse#menu(aria-expanded="false")
                        ul.nav.navbar-nav.navbar-right
                            li
                                a(href="/about") ABOUT
                            li
                                a(href="/companies") COMPANIES
                            li
                                a(href="/subscribe") SUBSCRIBE
                            li
                                a(href="/contact") CONTACT

        .content
            block content

        footer.footer
            .container
                p <a href="/">Nichekie</a> &copy;  #{(new Date()).getFullYear()}